@model Refugiados1.Models.SolicitarDadiva

@{
    ViewData["Title"] = "Delete";
}
<header>
    <div>
        <h2>Excluir</h2>
        <h3>Tem certeza que deseja excluir?</h3>
    </div>
</header>

<section>
    <div>
        <br />
        <h4>Solicitar Dádiva</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Ong)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Ong)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Endereço)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Endereço)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Dádiva)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Dádiva)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdDadiva" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>
</section>
