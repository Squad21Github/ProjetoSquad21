@model Refugiados1.Models.CriarDadiva

@{
    ViewData["Title"] = "Delete";
}
<header>
    <div>
        <h2>Excluir</h2>

        <h4>Tem certeza que deseja excluir?</h4>
    </div>
</header>

<section>

    <div>
        <br />
        <h4>Criar Dádiva</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class = "col-sm-2">
               Dádiva
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Dadiva)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCriarDadiva" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </form>
    </div>

</section>
